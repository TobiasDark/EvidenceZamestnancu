<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Center" Height="200" VerticalAlignment="Center" Width="200" Background="#FFC1C1C1"/>
        <Button x:Name="AddRecord" Content="Add" HorizontalAlignment="Left" Margin="300,331,0,0" VerticalAlignment="Top" Width="100" Click="AddRecord_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="300,356,0,0" VerticalAlignment="Top" Width="100" Click="DeleteRecord_Click"/>
        <Button x:Name="Show" Content="Show" HorizontalAlignment="Left" Margin="405,331,0,0" VerticalAlignment="Top" Width="95" Click="Show_Click"/>
        <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="405,356,0,0" VerticalAlignment="Top" Width="95" Click="Edit_Click"/>

    </Grid>
</Window>
